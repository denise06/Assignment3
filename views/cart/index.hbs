{{#extends 'base'}}

{{#block 'content'}}
    <h1>My shopping cart</h1>
    <a href="/checkout" class='btn btn-primary'>Checkout</a>
    <ul class="list-group">
        {{#each shoppingCart}}
            <li class="list-group-item my-3">
                <h4>{{this.product.name}}</h3>
                    <h5>Description: {{this.product.description}}</h5>
                    <h5>Cost: {{this.product.cost}} </h5>        
                    <form method="POST" action="/shoppingCart/{{this.product.id}}/quantity">
                        <input type="hidden" value="{{../csrfToken}}" name="_csrf"/> 
                        <h5>
                            Quantity: <input type="text" name="newQuantity" value="{{this.quantity}}" style="width:30px" /> 
                            <input type="submit" value="Update Quantity" class="btn btn-success btn-sm" />
                        </h5>
                    </form>
            </li>
            <div>
                <a href="/shoppingCart/{{this.product.id}}/remove" class="btn btn-danger">Remove</a>
            </div>
        {{/each}}
    </ul>


{{/block}}

{{/extends}}