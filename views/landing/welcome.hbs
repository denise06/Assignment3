{{#extends 'base'}}

{{#block 'content'}}
<h1>Welcome!</h1>
<h2>MiniMe, the one stop place to buy and sell baby products</h2> 
{{!-- trade in old toys --}}
<div style="background-color: #e2edf7;">
    <div class="container-fluid">
        <div class="row pt-3 pb-5">
            <div class="col-md-8 offset-md-2" style="padding-top: 2rem;">
                <h2 class="font-weight-bold">Trade your old toys</h2>
                <h4>3 easy steps to recycle your new/old baby products and earn some bucks! </h4>
                <div class="row mt-5 montserrat">
                    <div class="col-lg-4 col-md-6">
                        <div class="icon-box">
                            <div class="icon"><i class="card-checklist"></i></div>
                            <h4 class="title">Quality Check</h4>
                            <p class="description">Drop us an email with supporting images/videos as well as a short write up on the condition.
                                We will inform you if item passes quality check. 
                            </p>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6 mt-4 mt-md-0">
                        <div class="icon-box">
                            <div class="icon"><i class="fas fa-box-open"></i></div>
                            <h4>Book Pickup Slots</h4>
                            <p class = "text-justify">Upon email confirmation, head to any singpost to drop off your items .</p>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6 mt-4 mt-lg-0">
                        <div class="icon-box">
                            <div class="icon"><i class="fas fa-comment-dollar"></i></div>
                            <h4>Get Paid</h4>
                            <p>Payment will be done via bank transfer once item is sold on our platform </p>
                        </div>
                    </div>
                </div>
                <div class="mt-5 d-flex justify-content-center"><a class="btn btn-primary" href=""
                        role="button">Trade in Now!</a></div>

            </div>
        </div>

    </div>
</div>

{{/block}}

{{/extends}}

