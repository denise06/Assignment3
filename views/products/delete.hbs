{{#extends 'base'}}

{{#block "content"}}
<h1>Deleting {{product.name}}</h1>
<form method="POST">
    <div class="alert alert-danger">
        Are you sure you want to delete {{product.name}}?
    </div>
    <input type="submit" class="btn btn-danger" value="OK"/>
    <a href-"/products" class="btn btn-success">Cancel</a>
</form>
{{/block}}

{{/extends}}