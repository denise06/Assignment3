{{#extends 'base'}}

{{#block "content"}}
<h1>Deleting {{order.order_id}}</h1>
<p>Order ID: {{order.id}}</p>
<form method="POST">
    <input type="hidden" name="_csrf" value="{{csrfToken}}"/>
    <div class="alert alert-danger">
        <p>Are you sure you want to delete order <b>{{order.order_id}}</b>?</p>
    </div>
    <div>
        <input type="submit" class="btn btn-danger" value="Yes"/>
        <a href="/orders" class="btn btn-success">Cancel</a>
    </div>
</form>
{{/block}}

{{/extends}}